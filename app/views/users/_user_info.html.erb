 <h2>User info</h2>
   <% if user.profile_image.attached? %>
   <%=image_tag user.profile_image,size: "100x100" %>
   <% else %>
   <%= image_tag 'no_image', size: "100x100" %>
   <% end %>

 <table class="table">
  <tr>
	 <th>name</th>
	 <th><%= user.name %></th>
  </tr>
  <tr>
	 <th>introduction</th>
	 <th><%= user.introduction %></th>
  </tr>
  <tr>
   <th>
   <%= link_to 'edit', edit_user_path(user), class: "btn btn-outline-secondary btn-block" %>
   </th>
  </tr>
 </table>

<h2>New Book</h2>
<%= form_with model: Book.new do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Opinion</h4>
    <%= f.text_area :body %>
    <br>
    <%= f.submit 'Create Book' %>
<% end %>