<div class="row">

  <div class="col-md-3">
    <%= render 'user_info', user: @user %>
  </div>

    <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
        <table class="table table-hover table-inverse">
      <thead>
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @books.each do |book| %>
      <td>
        <% if book.user.profile_image.attached? %>
         <%=image_tag book.user.profile_image,size: "100x100" %>
        <% else %>
         <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td><%= book.title %></td>
      <td><%= book.body %> </td>
      <% end %>
    </tbody>
    </table>
      </div>
</div>
