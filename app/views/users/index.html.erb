 <div class="row mx-auto">
   <div class="col-md-3">

    <% if flash[:notice] %>
      <p id="notice">
    <%= flash[:notice] %>
      </p>
    <% end %>

     <%= render 'user_info', user: @user %>
   </div>
  <div class="col-md-8">
    <h2>Users</h2>
    <table class="table">
     <thead>
       <tr>
        <th>image</th>
        <th>name</th>
        <th colspan="3"></th>
      </tr>
     </thead>

      <% @users.each do |user| %>
      <td>
        <% if user.profile_image.attached? %>
         <%=image_tag user.profile_image,size: "100x100" %>
        <% else %>
         <%= image_tag 'no_image', size: "100x100" %>
        <% end %>
      </td>
      <td><%= user.name %></td>
      <td><%= link_to "Show",user_path(user.id) %> </td>
      <% end %>
    </table>
  </div>
</div>
