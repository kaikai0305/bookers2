<div class="row">
  <div class="col-md-6 mx-auto">
        <p id="notice"></p>


  		<h1>Editing Book</h1>

  		<%= form_with model: @book do |f| %>
       <label for="inputName">Title</label>
      <%= f.text_field :title, autofocus: true, id:"title", placeholder:"title"%><br>
      <label for="inputImage">Opinion</label>
     <%= f.text_area :opinion, placeholder: "opinion", accept: "opinion" %><br>
     <%= f.submit "Update Book" %><br>
      <% end %>

  		<%= link_to "Show", book_path(@book.id) %> |
  		<%= link_to "Back" ,books_path %>
  </div>
</div>